root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{json,jsonc}]
indent_size = 2

[Makefile]
indent_style = tab

[*.py]
max_line_length = 88
line_length = 88

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.{html,css,scss}]
indent_size = 2